
<%= simple_form_for(@java_jp) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs ">
   
    <%= f.input :editor, label: false, input_html: { class: 'form-control pre-scrollable',:rows => 7 , :style => 'width: 100%' }  %>

  </div>
<br>
  <div class="form-actions">
    <%= f.button :submit, 'Test Your Result', class: "btn btn-success" %>
  </div>
<% end %>
