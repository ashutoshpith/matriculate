<div class="container">
<%= simple_form_for(@java_jp) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :heading %>
    <%= f.input :ques,label: "Question",boolean_style: :inline %>
    <%= f.input :ans, label: "Answer  ",boolean_style: :inline %>
    <%= f.input :input,label: "Input  ",boolean_style: :inline %>
    <%= f.input :output,label:"Output ",boolean_style: :inline %>
    <%= f.input :point,label: "Point  ",boolean_style: :inline %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-success" %>
  </div>


<% end %>


</div>