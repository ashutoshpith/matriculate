
<%= simple_form_for(@jp) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="container">
<div class="form-group">

  <div class="form-inputs">
    <%= f.input :heading ,input_html: { class: 'form-control' } %>
    <br>
    <%= f.input :ques,input_html: { class: 'form-control' } %>
    <br>

    <%= f.input :ans,input_html: { class: 'form-control' } %>
    <br>

    <%= f.input :point,input_html: { class: 'form-control' } %>
    <br>

    <%= f.input :input,input_html: { class: 'form-control' } %>
    <br>

    <%= f.input :output,input_html: { class: 'form-control' } %>
    
  </div>
    <br>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-success'  %>
  </div>
  
  </div>
 </div>
<% end %>
