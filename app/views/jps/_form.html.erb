
<%= simple_form_for(@jp) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :ques %>
    <%= f.input :ans %>
    <%= f.input :point %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
